{
  "name": "STF Legal Content Scraper",
  "description": "Consolidated spider for extracting legal decisions from STF with configurable search queries",
  "target": {
    "site": "jurisprudencia.stf.jus.br",
    "focus": "legal_decisions",
    "content_type": "decisoes_e_jurisprudencia"
  },
  "features": {
    "configurable_query": "Support custom search queries",
    "clipboard_extraction": "Extract full decision content via clipboard",
    "metadata_extraction": "Extract case numbers, relators, dates",
    "quality_scoring": "Content quality assessment"
  },
  "usage": {
    "default_query": "estelionato previdenciário art 171 §3",
    "custom_query_example": "crime contra vida OR homicídio",
    "max_results": 250
  },
  "output": {
    "format": "json",
    "fields": [
      "title",
      "case_number", 
      "content",
      "relator",
      "decision_date",
      "source_url",
      "content_quality",
      "scraped_at"
    ]
  }
}
