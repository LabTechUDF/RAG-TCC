{
  "name": "Direito Penal",
  "description": "Scraper for Brazilian criminal law content, decisions, and legislation",
  "start_url": "https://stf.jus.br/portal/jurisprudencia/pesquisarJurisprudencia.asp",
  "fallback_urls": [
    "https://portal.stf.jus.br/jurisprudencia/",
    "https://stj.jus.br/sites/portalp/Paginas/Comunicacao/Noticias/Direito-Penal.aspx"
  ],
  "selectors": {
    "container": ".resultado-busca, .item-jurisprudencia, .decision-item",
    "item": ".jurisprudencia-item, .item-resultado, .decision-card",
    "title": "h3, h4, .titulo, .ementa-titulo",
    "date": ".data, .data-julgamento, .data-publicacao, time",
    "court": ".tribunal, .orgao-julgador, .origem",
    "case_number": ".numero-processo, .processo",
    "summary": ".ementa, .resumo, .decisao-resumo",
    "link": "a[href*='jurisprudencia'], a[href*='acordao']",
    "pdf_link": "a[href$='.pdf'], a[title*='PDF']",
    "relator": ".relator, .ministro",
    "type": ".tipo, .classe, .natureza"
  },
  "pagination": {
    "type": "button",
    "selector": ".proxima, .next, [aria-label*='próxima']",
    "max_pages": 10
  },
  "filters": {
    "search_terms": [
      "direito penal",
      "crime",
      "delito",
      "contravenção",
      "penal",
      "criminal"
    ],
    "date_range": {
      "start": "2020-01-01",
      "end": null
    }
  },
  "delays": {
    "page_load": 3000,
    "between_requests": 2000,
    "retry_delay": 5000
  },
  "output": {
    "format": "json",
    "fields": [
      "title",
      "date", 
      "court",
      "case_number",
      "summary",
      "link",
      "pdf_link",
      "relator",
      "type",
      "scraped_at"
    ]
  }
} 