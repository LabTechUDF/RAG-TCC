{
  "name": "Jurisprudência",
  "description": "Scraper for Brazilian jurisprudence, court decisions, and case law",
  "start_url": "https://jurisprudencia.stf.jus.br/pages/search?base=decisoes&pesquisa_inteiro_teor=false&sinonimo=true&plural=true&radicais=false&buscaExata=true&page=1&pageSize=250&queryString=%22estelionato%20previdenci%C3%A1rio%22%20%22(artigo%20ou%20art)%20171%20%C2%A73%22~3%20natureza&sort=_score&sortBy=desc",
  "fallback_urls": [
    "https://jurisprudencia.stf.jus.br/pages/search",
    "https://portal.stf.jus.br/jurisprudencia/",
    "https://scon.stj.jus.br/SCON/",
    "https://www.tjdft.jus.br/consultas/jurisprudencia"
  ],
  "selectors": {
    "container": "div[id^='result-index-']",
    "item": "div[id^='result-index-']",
    "title": "h2, h3, .titulo-decisao, .ementa",
    "date": ".data-julgamento, .data-publicacao, .date",
    "court": ".tribunal, .instancia, .orgao-julgador",
    "case_number": ".numero-processo, .processo, .case-number",
    "summary": ".ementa, .resumo, .abstract",
    "link": "a[href*='acordao'], a[href*='decisao'], a[href*='jurisprudencia'], a[href*='processos/listarProcessos.asp']",
    "pdf_link": "a[href$='.pdf'], a[title*='PDF'], a[href*='pdf'], a[href*='downloadPeca.asp']",
    "clipboard_link": "a[id^='clipboard-']",
    "processo_link": "a[href*='processos/listarProcessos.asp']",
    "relator": ".relator, .ministro, .desembargador, .juiz",
    "type": ".classe, .tipo-decisao, .natureza",
    "origem": ".origem, .procedencia, .local",
    "temas": ".assuntos, .temas, .keywords"
  },
  "pagination": {
    "type": "link",
    "selector": "a[aria-label*='Próxima'], .proximo, .next-page",
    "max_pages": 20
  },
  "filters": {
    "search_terms": [
      "jurisprudência",
      "acórdão",
      "decisão",
      "precedente",
      "súmula"
    ],
    "courts": [
      "STF",
      "STJ", 
      "TST",
      "TSE",
      "STM"
    ]
  },
  "delays": {
    "page_load": 4000,
    "between_requests": 3000,
    "retry_delay": 8000
  },
  "output": {
    "format": "json",
    "fields": [
      "title",
      "date",
      "court", 
      "case_number",
      "summary",
      "link",
      "pdf_link",
      "relator",
      "type",
      "origem",
      "temas",
      "scraped_at"
    ]
  }
} 