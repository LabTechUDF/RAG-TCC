{
  "name": "Normativas STJ",
  "description": "Scraper for Superior Court of Justice (STJ) normative acts and regulations",
  "start_url": "https://www.stj.jus.br/publicacaoinstitucional/",
  "fallback_urls": [
    "https://stj.jus.br/sites/portalp/Inicio",
    "https://www.stj.jus.br/internet/"
  ],
  "selectors": {
    "container": ".publicacao-lista, .normativa-lista, .document-list",
    "item": ".item-publicacao, .normativa-item, .document-item",
    "title": "h2, h3, .titulo, .document-title",
    "date": ".data-publicacao, .data, .publication-date",
    "type": ".tipo, .categoria, .document-type",
    "number": ".numero, .document-number",
    "summary": ".resumo, .ementa, .abstract",
    "link": "a[href*='publicacao'], a[href*='normativa'], a[href*='ato']",
    "pdf_link": "a[href$='.pdf'], a[title*='PDF']",
    "status": ".status, .vigencia, .situacao"
  },
  "pagination": {
    "type": "button", 
    "selector": ".proximo, .next, [aria-label*='próxima']",
    "max_pages": 15
  },
  "filters": {
    "document_types": [
      "instrução normativa",
      "resolução",
      "portaria",
      "ato regulamentar",
      "regimento interno"
    ],
    "date_range": {
      "start": "2015-01-01",
      "end": null
    }
  },
  "parsing": {
    "extract_document_number": true,
    "detect_revoked": true,
    "parse_effective_date": true
  },
  "delays": {
    "page_load": 3500,
    "between_requests": 2500,
    "retry_delay": 6000
  },
  "output": {
    "format": "json",
    "fields": [
      "title",
      "date",
      "type",
      "number",
      "summary",
      "link",
      "pdf_link",
      "status",
      "scraped_at"
    ]
  }
} 