{
  "name": "Direito Penal",
  "description": "Scraper for Brazilian criminal law content, decisions, and legislation",
  "start_url": "https://www.tjsp.jus.br/",
  "fallback_urls": [
    "https://www.tjrj.jus.br/",
    "https://www.tjsp.jus.br/Institucional/CanaisComunicacao/Noticias/Noticia.aspx?Id=29080"
  ],
  "selectors": {
    "container": "body, main, .container, .content-area, .main-content",
    "item": "a[href*='jurisprudencia'], a[href*='processo'], a[href*='decisao'], .noticia-item, .link-item",
    "title": "h1, h2, h3, h4, .titulo, .title, .noticia-titulo",
    "date": ".data, .data-publicacao, .data-noticia, time",
    "court": ".tribunal, .orgao, .fonte",
    "case_number": ".numero, .processo-numero",
    "summary": ".resumo, .texto, .descricao, .content",
    "link": "a[href*='jurisprudencia'], a[href*='processo'], a[href*='decisao'], a[href*='noticia']",
    "pdf_link": "a[href$='.pdf'], a[title*='PDF']",
    "relator": ".relator, .autor, .responsavel",
    "type": ".tipo, .categoria, .secao"
  },
  "pagination": {
    "type": "button",
    "selector": ".proxima, .next, .proximo, .paginacao a:last-child",
    "max_pages": 3
  },
  "filters": {
    "search_terms": [
      "direito penal",
      "crime",
      "delito",
      "contravenção",
      "penal",
      "criminal"
    ],
    "date_range": {
      "start": "2020-01-01",
      "end": null
    }
  },
  "delays": {
    "page_load": 2000,
    "between_requests": 1000,
    "retry_delay": 3000
  },
  "output": {
    "format": "json",
    "fields": [
      "title",
      "date", 
      "court",
      "case_number",
      "summary",
      "link",
      "pdf_link",
      "relator",
      "type",
      "scraped_at"
    ]
  }
} 